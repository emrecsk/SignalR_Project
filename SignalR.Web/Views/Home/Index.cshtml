@{
    ViewData["Title"] = "Home Page";
}

@section Scripts {
    <script src="~/js/client.js"></script>
}

<div class="container text-center">
    <h2>SignalR Communication</h2>

    <div class="row mb-5">
        <div class="col-8 offset-2">
            <input class="form-control" placeholder="Type your message here!" type="text" id="message-input" />
            <p id="connectionId" class="text-muted"></p>
        </div>        
    </div>

    <div class="row">
        <div class="col-2">            
            <button class="btn btn-primary" id="message-send-btn">Send Message to all</button>            
        </div>
        <div class="col-2">            
            <button class="btn btn-secondary" id="message-send-btn-to">Send Message to Caller</button>
        </div>
        <div class="col-3">            
            <button class="btn btn-success" id="message-send-btn-other">Send Message to Others</button>
        </div>
        <div class="col-3">            
            <button class="btn btn-outline-info" id="message-send-btn-specific">Send Message to Specific</button>
        </div>
        <div class="col-2">
            <input type="text" class="form-control" id="connectionIdInput" placeholder="Connection Id" />
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-md-8 offset-2">
            <ul class="list-group list-group-flush" id="messages-list"></ul>
        </div>
    </div>
    <div class="fixed-bottom">
        <h4>Online Clients Counter</h4>
        <div class="row mb-5">
            <div class="col-md-8 offset-2">
                <div class="progress">
                    <div class="progress-bar progress-bar-striped progress-bar-animated" id="bar_prog" role="progressbar" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100" style="width: 10%;">
                        Online Clients
                    </div>
                    <span class="badge rounded-pill bg-secondary" id="counter_sign"></span>
                </div>
            </div>
        </div>
    </div>
</div>
