@{
    ViewData["Title"] = "Home Page";
}

@section Scripts {
    <script src="~/js/client.js"></script>
}
<div class="row">
    <div class="col-8 text-center">
        <h2>SignalR Communication</h2>
        <div class="row mb-2">
            <div class="col-8 offset-2">
                <input class="form-control" placeholder="Type your message here!" type="text" id="message-input" />
                <p id="connectionId" class="text-muted"></p>
            </div>
        </div>

        <div class="row mb-2">
            <div class="col">
                <button class="btn btn-primary btn-sm small-text" id="message-send-btn">Send Message to All</button>
            </div>
            <div class="col">
                <button class="btn btn-secondary btn-sm small-text" id="message-send-btn-to">Send Message to Caller</button>
            </div>
            <div class="col">
                <button class="btn btn-success btn-sm small-text" id="message-send-btn-other">Send Message to Others</button>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-3 offset-2">
                <button class="btn btn-info btn-sm small-text" id="message-send-btn-specific">Send Message to Specific</button>
            </div>
            <div class="col-4 me-3">
                <input type="text" class="form-control" id="connectionIdInput" placeholder="Connection Id" />
            </div>
        </div>
        <hr />
        <h2>Group Management</h2>
        <div class="alert alert-info" id="currentGroupList"></div>
        <div class="row mt-2">
            <div class="col-3 offset-1">
                <button class="btn btn-outline-primary mt-3" id="group-add-btn">Add to Group</button>
            </div>
            <div class="col-3">
                <button class="btn btn-outline-danger mt-3" id="group-remove-btn">Remove from Group</button>
            </div>
            <div class="col-3">
                <select class="form-select mt-3" id="group-select">
                    <option value="">Select Group</option>
                    <option value="groupA">Group A</option>
                    <option value="groupB">Group B</option>
                    <option value="groupC">Group C</option>
                </select>
            </div>
        </div>
    </div>
    <div class="col-4 text-center">
        <h2>Messages and Notifications</h2>
        <div class="container">
            <ul class="list-group list-group-flush" id="messages-list"></ul>
        </div>

    </div>
</div>
<div class="fixed-bottom mb-3 text-center">
    <hr />
    <h4>Online Clients Counter</h4>
    <div class="row mb-5">
        <div class="col-md-8 offset-2">
            <div class="progress">
                <div class="progress-bar progress-bar-striped progress-bar-animated" id="bar_prog" role="progressbar" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100" style="width: 10%;">
                    Online Clients
                </div>
                <span class="badge rounded-pill bg-secondary" id="counter_sign"></span>
            </div>
        </div>
    </div>
</div>
