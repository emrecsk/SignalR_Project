@{
    ViewData["Title"] = "Home Page";
}

@section Scripts {
    <script src="~/js/client.js"></script>
}

<div class="container text-center">
    <div class="row mb-5">
        <div class="col-md-8 offset-2">
            <div class="progress">
                <div class="progress-bar progress-bar-striped progress-bar-animated" id="bar_prog" role="progressbar" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100" style="width: 10%;">
                    Online Clients
                </div>
                <span class="badge rounded-pill bg-secondary" id="counter_sign"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-2">
            <input type="text" id="message-input" />
            <button id="message-send-btn">Send Message to all</button>            
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-md-8 offset-2">
            <ul class="list-group list-group-flush" id="messages-list"></ul>
        </div>
    </div>
</div>
